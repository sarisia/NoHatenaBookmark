{
    "manifest_version": 2,
    "name": "No Hatena Bookmark",
    "version": "1.0.0",
    "description": "Skip Hatena Bookmark, get the destination directly.",
    "icons": {
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
    },
    "homepage_url": "https://github.com/sarisia/NoHatenaBookmark",

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "contextMenus",
        "*://b.hatena.ne.jp/entry*"
    ],
    "background": {
        "scripts": [ "background.js" ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "assets/icon-32.png"
    }
}
